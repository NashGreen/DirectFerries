@page
@model DirectFerries.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Dashboard</h1>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert" aria-live="polite">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success" role="alert" aria-live="polite">
                @Model.SuccessMessage
            </div>
        }

        @if (Model.IsLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading smartphones...</p>
            </div>
        }
        else if (Model.Smartphones?.Any() == true)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <h2 class="h4">Top 3 Most Expensive Smartphones</h2>
                </div>
            </div>

            <div class="row">
                @foreach (var phone in Model.Smartphones)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@phone.Thumbnail" class="card-img-top" alt="@phone.Title"
                                 style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h3 class="card-title h5">@phone.Brand</h3>
                                <h4 class="card-subtitle mb-2 text-muted h6">@phone.Title</h4>
                                <p class="card-text flex-grow-1">@phone.Description</p>
                                <div class="mt-auto">
                                    <p class="card-text">
                                        <strong class="text-success fs-4">$@phone.Price.ToString("F2")</strong>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">Rating: @phone.Rating/5 | Stock: @phone.Stock</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title h5 mb-0">Update Prices</h2>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div class="mb-3">
                                    <label for="percentage" class="form-label">Price Increase Percentage</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="percentage" name="Percentage"
                                               value="@Model.Percentage" min="0" max="100" step="0.01" required
                                               aria-describedby="percentageHelp">
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <div id="percentageHelp" class="form-text">
                                        Enter a percentage to increase all smartphone prices (e.g., 10 for 10% increase)
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary" @(Model.IsUpdating ? "disabled" : "")>
                                    @if (Model.IsUpdating)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Updating Prices...</span>
                                    }
                                    else
                                    {
                                        <span>Update Prices</span>
                                    }
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <h2 class="alert-heading h5">No smartphones found</h2>
                <p>Unable to load smartphone data. Please try refreshing the page.</p>
                <hr>
                <a href="/Dashboard" class="btn btn-outline-info">Refresh</a>
            </div>
        }
    </div>
</div>
